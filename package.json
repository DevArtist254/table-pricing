{
  "name": "table-pricing",
  "version": "1.0.0",
  "description": "",
  "main": "public/index.html",
  "scripts": {
    "build:sass": "sass --no-source-map src/sass/main.scss public/css/style.css",
    "copy:assests": "cp -v -f -R src/assests/ public/",
    "copy:html": "cp -v -f -R src/*.html public/",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange src/assets/**/* -- npm run copy:assets",
    "watch:html": "onchange src/*.html -- npm run copy:html",
    "watch:sass": "sass --watch src/sass/main.scss public/css/style.css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "build:post": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.2",
    "cssnano": "^7.0.4",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.8"
  }
}
